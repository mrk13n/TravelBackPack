<div class="col-md-6 col-xs-12">
    <div class="col-xs-2">
        <div class="thumbnail thumb_city user-photo">
            <img class="img-responsive" src="assets/images/avatars/<%= comment.comment.avatar%>.png">
        </div>
    </div>

    <div class="col-xs-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong><%= comment.comment.nickname%></strong> <span class="text-muted">commented <%= comment.comment.day%>-<%= comment.comment.month%>-<%= comment.comment.year%></span><span class="favorite <% if (comment.favorite) { %> glyphicon glyphicon-star <% } else { %> glyphicon glyphicon-star-empty <% } %>"></span>
            </div>
            <div class="panel-body">
                <%= comment.comment.comment%>
            </div>
        </div>
    </div>
</div>